@model doStuff.ViewModels.GroupFeedViewModel

<div class="pull-right right-sidebar">
    <h2>@Model.Group.Name</h2>
    <div>
        <p>Members</p>
    </div>
    <ul>
        @if (Model.SideBar.User.UserID == Model.Group.OwnerId)
        {
            foreach (var user in Model.SideBar.UserList)
            {
                <li class ="eventfeed-friend">
                    @user.DisplayName
                    @if(user.UserID != Model.Group.OwnerId)
                    {
                        using (Html.BeginForm("RemoveMember", "Group"))
                        {
                            @Html.Hidden("memberId", user.UserID)
                            @Html.Hidden("groupId", Model.Group.GroupID)
                            <button type="submit" class="btn btn-primary remove-button">
                                <i class="glyphicon glyphicon-remove right"></i>
                            </button>
                            @Html.ValidationSummary(false)
                        }
                    }
                </li>
            }
        }
        else
        {
            foreach (var user in Model.SideBar.UserList)
            {
                <li>@user.DisplayName</li>
            }
        }        
    </ul>
    <div>
        @using (Html.BeginForm("AddMember", "Group"))
        {
            @Html.Hidden("groupId", Model.Group.GroupID)

            <div class="form-group">
                <span class="col-md-10">
                    <input type="text" name="username" placeholder="Your friends username" />
                    <button type="submit" class="btn btn-primary remove-button">
                        <i class="glyphicon glyphicon-plus right"></i>
                    </button>
                </span>
            </div>
            @Html.ValidationSummary(false)
        }
    </div>
</div>
