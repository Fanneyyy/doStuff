@using doStuff.Services;
@model doStuff.ViewModels.GroupFeedViewModel

 <div class="col-md-4">
     <div class="banner-logo-box">
         <a id="banner-logo" href="@Url.Action("Index", "User")"></a>
     </div>
 </div>
 <div class="col-md-4">
    @foreach (var i in Model.Groups)
    {
        if (Model.groupId == i.GroupID)
        {
            <div class="btn-group">
                <button type="button" class="btn dropdown-toggle feed-chooser" data-toggle="dropdown" aria-expanded="false">
                    @i.Name <span class="caret"></span>
                </button>
                <ul class="dropdown-menu banner-dropdown" role="menu">
                    <li>@Html.ActionLink("Event feed", "Index", "User")</li>
                    <li class="divider"></li>

                    @foreach (var x in Model.Groups)
                    {
                        if(x.GroupID != Model.groupId)
                        {
                            <li>@Html.ActionLink(x.Name, "Index", "Group", new { groupId = x.GroupID }, null)</li>

                        }
                    }
                    <li class="divider"></li>
                    <li>@Html.ActionLink("create group", "CreateGroup", "Group", null, new { @class = "btn btn-default cancel" })</li>
                </ul>
            </div>
        }
    }
</div>

    <div class="col-md-4">
        @Html.Partial("_LoginPartial")
    </div>
