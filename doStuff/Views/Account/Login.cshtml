@model doStuff.Models.LoginViewModel
@{
    ViewBag.Title = "sign in";
}

<div class="row">
    <!--doStuff Logo-->
    <div class="col-md-4 col-sm-12">
        <a href="@Url.Action("Index", "User")">
            <img class="login-register-logo" src="@Url.Content("../Content/pictures/doStufflogo.png")" alt="doStuffLogo" />
        </a>
    </div>
    <!--Login Box-->
    <div class="col-md-4 col-md-offset-0 col-sm-10 col-sm-offset-1">
        <div class="col-md-12 login-register-box">
            <h2 class="text-center login-register-title">@ViewBag.Title</h2>
            <!--Login Form-->
            <section id="loginForm">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true)
                    <!--Username-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.UserName, new { @class = "col-md-10 control-label col-md-offset-1" })
                        <div class="col-md-10 col-md-offset-1">
                            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.UserName)
                        </div>
                    </div>
                    <!--Password-->
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new { @class = "col-md-10 control-label col-md-offset-1" })
                        <div class="col-md-10 col-md-offset-1">
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>
                    </div>
                    <!--Remember me-->
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-8">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                    </div>
                    <!--Login Button-->
                    <div class="form-group login-register-buttons">
                        <div class="col-md-offset-2 col-md-8">
                            <input type="submit" value="sign in" class="btn btn-default login" />
                        </div>
                    </div>
                    <!--Register Button-->
                    <div class="form-group login-register-buttons">
                        <div class="col-md-offset-2 col-md-8">
                            @Html.ActionLink("register", "Register", null, new { @class = "btn btn-default register" })
                        </div>
                    </div>
                }
            </section>
        </div>
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}